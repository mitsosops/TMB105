    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": ["doc/sourceSample.txt"],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File Help (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": ["-h"],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File With Out Arg (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": ["doc/sourceSample.txt", "--out", "test.enc"],
            "console": "integratedTerminal"
        },
    ]
}